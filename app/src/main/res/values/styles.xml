<resources>

    <style name="AppTheme" parent="MyDemo" />

    <style name="MyDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffd46c</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#4caf50</item>
        <item name="android:windowBackground">@color/skin_window_background_day</item>
    </style>
    <style name="have_light_dialog" parent="@style/Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Actionbar -->
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Status bar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Window color -->
        <item name="android:windowBackground">@color/dim_foreground_material_dark</item>
    </style>
    <style name="SelectableItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="TickerTextAppearance">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">50sp</item>
    </style>
    <!--按钮的style-->
    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <declare-styleable name="RippleView">
        <attr name="pressed" format="reference" />
        <attr name="normal" format="reference" />
    </declare-styleable>
<!--碎裂效果-->

    <style name="ToggleButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@drawable/toggle_button</item>
        <item name="android:text"></item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="ToggleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SeekBarTextLeft" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SeekBarTextRight" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">17sp</item>
    </style>
<!--三方分享-->
    <style name="popwindowStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/popwindow_enter</item>
        <item name="@android:windowExitAnimation">@anim/popwindow_exit</item>
    </style>
    <!--透明-->
    <style name="toumingStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 背景颜色及透明程度  -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--  是否有标题  -->
        <item name="android:windowNoTitle">true</item>
        <!--  是否浮现在activity之上  -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否模糊  -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- 跳转动画-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!--建议-->
    <style name="suggest_text_err">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="suggest_text_nomol">
        <item name="android:textColor">@color/orange500</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--dialog-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="line_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">#eaeaea</item>
    </style>
    <style name="introduction_text_err">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="introduction_text_nomol">
        <item name="android:textColor">@color/custom</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--viewPagerCard-->
    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>
    <!--仿ios dialog-->

    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画
    </style>

    <style name="dialog_center" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter_center</item>  //进入时的动画
        <!--  <item name="@android:windowExitAnimation">@anim/dialog_exit_center</item>    //退出时的动画-->
    </style>
    <style name="notitle" >
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
