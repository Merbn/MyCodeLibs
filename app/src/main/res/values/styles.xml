<resources>

    <style name="AppTheme" parent="MyDemo" />

    <style name="MyDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffd46c</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#4caf50</item>
        <item name="android:windowBackground">@color/skin_window_background_day</item>
    </style>

    <style name="SelectableItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="TickerTextAppearance">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">50sp</item>
    </style>
    <!--按钮的style-->
    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <declare-styleable name="RippleView">
        <attr name="pressed" format="reference" />
        <attr name="normal" format="reference" />
    </declare-styleable>
<!--碎裂效果-->

    <style name="ToggleButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@drawable/toggle_button</item>
        <item name="android:text"></item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="ToggleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SeekBarTextLeft" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SeekBarTextRight" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">17sp</item>
    </style>
<!--三方分享-->
    <style name="popwindowStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/popwindow_enter</item>
        <item name="@android:windowExitAnimation">@anim/popwindow_exit</item>
    </style>
</resources>
