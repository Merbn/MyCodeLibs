<resources>

    <style name="AppTheme" parent="MyDemo" />
    <style name="MyDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffd46c</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#4caf50</item>
        <item name="android:windowBackground">@color/skin_window_background_day</item>
    </style>

    <style name="SelectableItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
    <style name="TickerTextAppearance">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">50sp</item>
    </style>

    <declare-styleable name="RippleView">
        <attr name="pressed" format="reference"/>
        <attr name="normal" format="reference"/>
    </declare-styleable>
</resources>
