<?xml version="1.0" encoding="utf-8"?>
    <resources>
        <declare-styleable name="ActionView">
            <attr name="av_color" format="color"/>
            <attr name="av_action" format="enum">
                <enum name="drawer" value="0"/>
                <enum name="back" value="1"/>
                <enum name="close" value="2"/>
                <enum name="plus" value="3"/>
            </attr>
        </declare-styleable>
    <!--Button VIew-->
    <declare-styleable name="ButtonView">
        <attr name="text" format="string"/>
        <attr name="text_color" format="color"/>
        <attr name="text_size" format="dimension"/>
        <attr name="stroke_size" format="dimension"/>
        <attr name="stroke_color" format="color"/>
        <attr name="arc_color" format="color"/>
    </declare-styleable>
</resources>