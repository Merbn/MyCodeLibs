<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <include layout="@layout/line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="10dp"
        android:paddingTop="10dip"
        android:text="分享到"
        android:textColor="@color/text_color_gray"
        android:textSize="13sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dip"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

 
            <LinearLayout
                android:id="@+id/share_to_sinaweibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/skyblue_logo_sinaweibo_checked"
                    android:scaleType="center"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="新浪微博"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_weixin_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/skyblue_logo_wechat_checked"
                    android:scaleType="center"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="微信好友"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/skyblue_logo_qq_checked"
                    android:scaleType="center"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="QQ好友"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_weixin_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/iconfont_weixinquan"
                    android:scaleType="center"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="微信朋友圈"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_to_qqzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/iconfont_qzone"
                    android:scaleType="center"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="QQ空间"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <include layout="@layout/line" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dip"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/copylink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/shape_refresh"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconfont_copy"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="复制链接"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_by_system"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/shape_refresh"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconfont_share"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="系统分享"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <!--生成二维码-->
            <LinearLayout
                android:id="@+id/share_create_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/shape_refresh"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconfont_qrcode"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="@string/create_qr_code"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jubao_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/jubao_delete_image"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/shape_refresh"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconfont_warnfill"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/jubao_delete_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="举报卡片"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/refresh_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:background="@drawable/shape_refresh"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/iconfont_refresh"
                    tools:ignore="ContentDescription" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:gravity="center_vertical"
                    android:text="刷新本页"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <include layout="@layout/line" />

    <Button
        android:id="@+id/textView_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@android:color/black" />

</LinearLayout>