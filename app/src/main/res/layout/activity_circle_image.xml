<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_circle_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.merbng.mycodelibs.activitys.CircleImageActivity">

    <com.app.merbng.mycodelibs.widget.BezelImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/iconfont_login_bg"
        android:layout_centerInParent="true"
        android:id="@+id/img1"
        android:scaleType="centerCrop"
        app:maskDrawable="@drawable/rounded_corners_mask" />

    <com.app.merbng.mycodelibs.widget.BezelImageView
        android:layout_width="50dp"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_height="50dp"
        android:layout_below="@+id/img1"
        android:src="@drawable/tut_page_1_background"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:maskDrawable="@drawable/rounded_corners_mask2" />
</RelativeLayout>
