<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_minutes_ago"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.app.merbng.mycodelibs.widget.MinutesAgoTixtView
        android:id="@+id/minuteago_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="几分钟前"
        android:gravity="center"/>

    <com.app.merbng.mycodelibs.widget.MinutesAgoTixtView
        android:id="@+id/minuteago_date2"
        android:layout_below="@+id/minuteago_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="几分钟前"
        android:gravity="center"/>

    <com.app.merbng.mycodelibs.widget.MinutesAgoTixtView
        android:id="@+id/minuteago_date3"
        android:layout_below="@+id/minuteago_date2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="将时间戳转换为友好显示的时间,用于聊天"
        android:gravity="center"/>

    <com.app.merbng.mycodelibs.widget.MinutesAgoTixtView
        android:id="@+id/minuteago_date4"
        android:layout_below="@+id/minuteago_date3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="几分钟前"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/minuteago_date4"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        tools:text="几分钟前" />
</RelativeLayout>
