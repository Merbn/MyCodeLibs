<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/draw_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_add_logo_qrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="带logo的二维码"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/btn_recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="recycleView"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/btn_seeZoomImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="SeeZoomImg"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/btn_TipShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="TipShow"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/btn_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="titleBar"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/btn_zan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="Zan"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/btn_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="导航栏"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/time_line"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="时间轴"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/Shine_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="流光字"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="Loading"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="Search"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/toast"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="Toast"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/createcircular"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="createCircular"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/studyRecycleView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="Study RecycleView"
            android:textColor="@color/skin_color_bg" />

        <Button
            android:id="@+id/testGetConnection"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/skin_color_text"
            android:onClick="btnClick"
            android:text="测试Get请求"
            android:textColor="@color/skin_color_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/changeSkin"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/skin_color_1_day"
                android:onClick="btnClick"
                android:text="换肤1-白天模式" />

            <Button
                android:id="@+id/changeSkin2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/skin_color_bg_night"
                android:onClick="btnClick"
                android:textColor="@color/skin_color_bg_day"
                android:text="换肤2-夜间模式" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>